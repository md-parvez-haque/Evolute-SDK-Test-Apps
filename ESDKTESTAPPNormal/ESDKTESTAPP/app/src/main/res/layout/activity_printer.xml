<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evolutetrans1"
    android:orientation="vertical"
    tools:context=".PrinterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="#855D87"
                    android:gravity="center"
                    android:text="PRINTER API OPERATIONS "
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FF9800"
                    android:textStyle="bold|italic"
                    android:visibility="visible" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_clearLog"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:backgroundTint="#4CAF50"
                        android:text="CLRLOGS" />

                    <TextView
                        android:id="@+id/txtViewlogs"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:text="Display logs"
                        android:textAlignment="textStart"
                        android:textColor="#E521F3"
                        android:textSize="20dp" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_poweron"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="POWER ON"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btn_poweroff"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="POWER OFF"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_getversion"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="GET VERSION"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btn_checkpaper"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="CHECK PAPER"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_printerstatus"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="195dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="igetprinterstatus"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btn_returncode"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="igetreturncode"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_flushbuff"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="195dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:text="iFlushBuffer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btn_testprint"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:text="Test Print"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spn_FontType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F44336"
                    android:hint="Enter Text" />

                <Spinner
                    android:id="@+id/spn_Alignment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#F44336" />

                <EditText
                    android:id="@+id/edt_textenter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:hint="Enter Text here" />

                <Button
                    android:id="@+id/btn_printtext"
                    style="@android:style/Widget.Holo.Light.Button"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_margin="7dp"
                    android:gravity="center"
                    android:text="istartprintingByFont size and Alignment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#F44336"
                    android:textColorHighlight="#E12F2F"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_print"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="195dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Print Text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#F44336"
                android:textColorHighlight="#E12F2F"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btn_rawdata"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="195dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Send RAWDATA"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#F44336"
                android:textColorHighlight="#E12F2F"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_LeftText"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:focusable="true"
                    android:hint="EnterLeftText"
                    android:textColorHighlight="#E12F2F"
                    tools:ignore="DuplicateIds" />
                <EditText
                    android:id="@+id/edt_CenterText"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:focusable="true"
                    android:textColorHighlight="#E12F2F"
                    android:hint="EnterCenterText" />
                <EditText
                    android:id="@+id/edt_RightText"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:focusable="true"
                    android:textColorHighlight="#E12F2F"
                    android:hint="EnterRightText" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_FontSize"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:focusable="true"
                android:hint="Enter Fontsize" />

            <Button
                android:id="@+id/btn_justification"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Justification Text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#F44336"
                android:textColorHighlight="#E12F2F"
                android:textSize="20sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner

                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:id="@+id/spn_ImageAlign"
                android:backgroundTint="#E12F2F"
                android:outlineProvider="background" />

            <Button
                android:id="@+id/btn_printQR"
                style="@android:style/Widget.Holo.Light.Button"
                android:layout_width="205dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Print QR "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#F44336"
                android:textColorHighlight="#E12F2F"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_QRcodeData"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#E12F2F"
                    android:hint="Enter QR data"  />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_printimage"
                        style="@android:style/Widget.Holo.Light.Button"
                        android:layout_width="400dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:text="Print Image"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#F44336"
                        android:textColorHighlight="#E12F2F"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_barcodeData"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:backgroundTint="#E12F2F"
                            android:hint="Enter Barcode data here" />

                    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_FontSizebarcode"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_margin="8dp"
                    android:focusable="true"
                    android:hint="Enter Barcode SIZE" />

                        <Button
                            android:id="@+id/btn_printbarcode128"
                            style="@android:style/Widget.Holo.Light.Button"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_margin="8dp"
                            android:text="I Print 128 Barcode"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textColor="#F44336"
                            android:textColorHighlight="#E12F2F"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
